@model IT6OrderManagementWebAppCS.Models.Product
@{
    ViewBag.Title = "Delete Product";
}

<!DOCTYPE html>
<html>
<head>
    <title>Delete Confirmation</title>
    <style>
        .warning { background: #fff3cd; border: 1px solid #ffeaa7; padding: 20px; margin: 20px 0; }
        .btn { padding: 10px 20px; text-decoration: none; margin: 10px; display: inline-block; }
        .btn-danger { background: #f44336; color: white; }
        .btn-secondary { background: #ccc; color: black; }
    </style>
</head>
<body>
    <h2>Delete Product?</h2>
    
    <div class="warning">
        <h4>Are you sure you want to delete:</h4>
        <strong>ID:</strong> @Model.ProductId<br/>
        <strong>Name:</strong> @Model.ProductName<br/>
        <strong>Price:</strong> $@Model.Price<br/>
        <strong>Stock:</strong> @(Model.InStock ? "Yes" : "No")
    </div>

    <form method="post" action="/Product/Delete">
        <input type="hidden" name="ProductId" value="@Model.ProductId" />
        <input type="submit" value="Yes, Delete" class="btn btn-danger" 
               onclick="return confirm('This cannot be undone!')" />
        <a href="/Product/Index" class="btn btn-secondary">Cancel</a>
    </form>
</body>
</html>
